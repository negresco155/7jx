programa 
{
  funcao inicio() 
  {
    inteiro a, b, soma, sub, div, multi

    escreva("Digite o valor de a: ")
    leia(a)

    escreva("Digite o valor de b: ")
    leia(b)

    soma = a + b
    sub = a - b
    div = a / b 
    multi = a * b

    escreva("Soma, é igual a:  ", soma)
    escreva(" | Subtração, é igual a:  ", sub)
    escreva(" | Divisão, é igual a:  ", div)
    escreva(" | Multiplicação, é igual a:  ", multi)
    
  }
}
